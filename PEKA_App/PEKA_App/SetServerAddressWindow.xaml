<Window x:Class="PEKA_App.SetServerAddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set server address" Height="200" Width="300" Background="DarkGray">
    <Grid>
        <Label Content="Enter the server address:" Height="27" HorizontalAlignment="Left" Margin="65,42,0,0" Name="addressTextBoxLabel" VerticalAlignment="Top" Width="143" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="65,75,0,0" Name="addressTextBox" VerticalAlignment="Top" Width="143" />
        <Button Content="Submit" Height="23" HorizontalAlignment="Left" Margin="101,126,0,0" Name="addressSubmitButton" VerticalAlignment="Top" Width="75" Click="addressSubmitButton_Click" />
    </Grid>
</Window>
